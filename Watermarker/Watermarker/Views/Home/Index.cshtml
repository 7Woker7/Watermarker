@{ 
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4>Download watermark</h4>
    <div class="container">
        <form asp-controller="Home" asp-action="WatermarkUpload" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label class="form-label">Upload watermark file</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit">Upload</button>
            </div>
        </form>
    </div>
    
</div>
